!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width"}

    %link{:rel => "stylesheet", :href => "chosen-master/chosen/chosen.css"}
    %link{:rel => "stylesheet", :href => "foundation/stylesheets/foundation.min.css"}
    %link{:rel => "stylesheet", :href => "foundation/stylesheets/app.css"}
    %link{:rel => "stylesheet", :href => "main.css"}
    %link{:rel => "stylesheet", :href => "backgrounds.css"}

    %script{:src => "foundation/javascripts/modernizr.foundation.js"}

  %body
    -# body layout

    %p

    %dl.tabs.two-up
      %dd
        %a{:href => '#rebelContent'} Rebel Alliance
      %dd
        %a{:href => '#empireContent'} Galactic Empire
    %ul.tabs-content
      %li#rebelContentTab
        #rebel-builder
      %li#empireContentTab
        #empire-builder

    #rebel-pilot-tooltip.info-tooltip
      %table
        %tbody
          %tr.ship
            %th Ship
            %td
          %tr.attack
            %th Attack
            %td
          %tr.agility
            %th Agility
            %td
          %tr.hull
            %th Hull
            %td
          %tr.shields
            %th Shields
            %td
          %tr.actions
            %th Actions
            %td
      %p.flavortext
    #rebel-upgrade-tooltip.info-tooltip
      %table.weapon-stats
        %tbody
          %tr.attack
            %th Attack
            %td
          %tr.range
            %th Range
            %td
      %p.flavortext

    #empire-pilot-tooltip.info-tooltip
      %table
        %tbody
          %tr.ship
            %th Ship
            %td
          %tr.attack
            %th Attack
            %td
          %tr.agility
            %th Agility
            %td
          %tr.hull
            %th Hull
            %td
          %tr.shields
            %th Shields
            %td
          %tr.actions
            %th Actions
            %td
      %p.flavortext
    #empire-upgrade-tooltip.info-tooltip
      %table.weapon-stats
        %tbody
          %tr.attack
            %th Attack
            %td
          %tr.range
            %th Range
            %td
      %p.flavortext

    #urlModal.reveal-modal.large
      %input{:type => 'text', :readonly => 'readonly'}
      %a.close-reveal-modal &#215;

    -# Foundation/JS linkages
    %script{:src => "jquery-1.8.3.min.js"}
    %script{:src => "foundation/javascripts/foundation.min.js"}
    %script{:src => "foundation/javascripts/app.js"}
    %script{:src => "chosen-master/chosen/chosen.jquery.min.js"}
    %script{:src => "cards.js"}
    %script{:src => "main.js"}
    :coffee
      $(document).ready ->
        window.foo = rebel_sb = new window.SquadBuilder
            container: '#rebel-builder'
            faction: 'Rebel Alliance'
            pilot_tooltip: '#rebel-pilot-tooltip'
            upgrade_tooltip: '#rebel-upgrade-tooltip'
            url_modal: '#urlModal'
        window.bar = empire_sb = new window.SquadBuilder
            container: '#empire-builder'
            faction: 'Galactic Empire'
            pilot_tooltip: '#empire-pilot-tooltip'
            upgrade_tooltip: '#empire-upgrade-tooltip'
            url_modal: '#urlModal'
        $('dl.tabs dd:first a').click()
