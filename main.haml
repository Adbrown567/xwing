!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width"}

    %link{:rel => "stylesheet", :href => "chosen-master/chosen/chosen.css"}
    %link{:rel => "stylesheet", :href => "foundation/stylesheets/foundation.min.css"}
    %link{:rel => "stylesheet", :href => "foundation/stylesheets/app.css"}

    %script{:src => "foundation/javascripts/modernizr.foundation.js"}
    :sass
      select.pilot
        width: 100%

      select.upgrade
        width: 350px

      abbr
        cursor: pointer

      span.remove
        cursor: pointer
        background-color: red
        color: white
        font-size: 1.25em
        font-weight: bold
        border-top: thin solid #ccc
        border-left: thin solid #ccc
        border-bottom: thin solid #222
        border-right: thin solid #222
        padding-bottom: 3px

      div.total-points
        font-size: 2em

      div.info-tooltip
        width: 300px
        float: right
        clear: both
        position: absolute
        display: none
        zIndex: 999

  %body
    -# body layout

    #rebel-builder
    #rebel-pilot-tooltip.info-tooltip
      %table
        %tbody
          %tr
            %th Ship
            %td.ship
          %tr
            %th Attack
            %td.attack
          %tr
            %th Agility
            %td.agility
          %tr
            %th Hull
            %td.hull
          %tr
            %th Shields
            %td.shields
          %tr
            %th Actions
            %td.actions
      %p.flavortext

    #rebel-upgrade-tooltip.info-tooltip

    -# Foundation/JS linkages
    %script{:src => "http://code.jquery.com/jquery-1.8.3.min.js"}
    %script{:src => "foundation/javascripts/foundation.min.js"}
    %script{:src => "foundation/javascripts/app.js"}
    %script{:src => "chosen-master/chosen/chosen.jquery.min.js"}
    %script{:src => "cards.js"}
    %script{:src => "main.js"}
    :coffee
      $(document).ready ->
        window.foo = rebel_sb = new window.SquadBuilder
            container: '#rebel-builder'
            faction: 'Rebel Alliance'
            pilot_tooltip: '#rebel-pilot-tooltip'
            upgrade_tooltip: '#rebel-upgrade-tooltip'
